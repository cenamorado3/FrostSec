    <div draggable="true" ondragover="event.preventDefault();" style="border:2px solid @color;height:650px;width:650px;@position"
    @ondragstart="DragStartHandler" @ondragend="DragEndHandler"
    >
        <iframe class="mt-4" width="600" height="600" src="https://www.youtube-nocookie.com/embed/QHZ48AE3TOI" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
</FrostCollapse>

