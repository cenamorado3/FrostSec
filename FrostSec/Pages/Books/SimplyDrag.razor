@code{
    private string position = "";
    private string color = "black";
    private void DragStartHandler(DragEventArgs e)
    {
        color = "green";
    }

    private void DragEndHandler(DragEventArgs e)
    {
        color = "black";
        position = $"position:absolute;left:{e.ClientX}px;top:{e.ClientY}px;";
        StateHasChanged();
    }
